<Window x:Class="ProcessListApp.InformationProcess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessListApp"
        mc:Ignorable="d"
        Title="Information about the process" FontSize="20" Height="300" Width="400">
    <StackPanel Orientation="Vertical">
        <ListBox x:Name="infListBox" Margin="10"/>
        <Button x:Name="exitButton" 
                Content="exit" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="10"
                Height="30"
                Width="150" Click="exitButton_Click"/>
    </StackPanel>
</Window>
